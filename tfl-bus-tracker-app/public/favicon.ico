const express = require('express');
const axios = require('axios');
const app = express();
const PORT = process.env.PORT || 3000;

// Middleware
app.use(express.json());

// Search for bus stops
app.get('/api/bus-stops/search', async (req, res) => {
    const query = req.query.q;
    try {
        const response = await axios.get(`https://api.tfl.gov.uk/StopPoint/Search?query=${query}&app_key=YOUR_API_KEY`);
        res.json(response.data);
    } catch (error) {
        res.status(500).json({ error: 'Error fetching bus stops' });
    }
});

// Fetch real-time arrivals
app.get('/api/bus-stops/:id/arrivals', async (req, res) => {
    const stopId = req.params.id;
    try {
        const response = await axios.get(`https://api.tfl.gov.uk/StopPoint/${stopId}/Arrivals?app_key=YOUR_API_KEY`);
        res.json(response.data);
    } catch (error) {
        res.status(500).json({ error: 'Error fetching arrivals' });
    }
});

// Start server
app.listen(PORT, () => {
    console.log(`Server is running on port ${PORT}`);
});